<div class="profile-index-wrapper">
  <div class="container">
    <% @profiles.each do |profile| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="profile-index-single">
            <h2 class="prifile-author">
              <%= profile.nickname %>
            </h2>
            <%= image_tag profile.image.url %>
            
            <% if !current_user.following? profile.user %>
              <%= link_to "BUY", {controller: :users, action: :follow, user_id: profile.user.id}, method: :put %>
            <% end %>
            
            <p class="profile-text">
              <%= profile.introduction %>
              <%= profile.age %>
              <%= profile.price %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>