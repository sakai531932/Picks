<div class="top-hero-wrapper text-center">
  <div class="container top-hero-container">
    <h1 class="text-white">WELCOME TO TALKROOM!</h1>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <ul class="messages">
          <%= render @messages %>
        </ul>
        
        <%= form_for @message, url: messages_room_path(@room),
                          html: { class: 'message-form'} do |f| %>
          <div class="field">
            <%= f.text_area :content, class: "content" %>
          </div>  
          <%= f.submit "Send", class: "btn btn-primary" %>
        <% end %>
        
      </div>
    </div>
  </div>
</div>